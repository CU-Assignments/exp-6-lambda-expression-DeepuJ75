import java.util.*;
import java.util.stream.Collectors;

class Student {
    String name;
    double marks;

    public Student(String name, double marks) {
        this.name = name;
        this.marks = marks;
    }

    public void display() {
        System.out.println(name + " | Marks: " + marks);
    }
}

public class StudentFilter {
    public static void main(String[] args) {
        List<Student> students = Arrays.asList(
            new Student("Alice", 85),
            new Student("Bob", 72),
            new Student("Charlie", 90),
            new Student("David", 65)
        );

        // Using Stream & Lambda to filter and sort students by marks
        List<Student> filteredStudents = students.stream()
                .filter(s -> s.marks > 75) // Filter students scoring above 75%
                .sorted((s1, s2) -> Double.compare(s2.marks, s1.marks)) // Sort by marks in descending order
                .collect(Collectors.toList());

        System.out.println("Students scoring above 75% (Sorted by Marks):");
        filteredStudents.forEach(Student::display);
    }
}
